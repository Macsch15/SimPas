{% extends "BaseBlock.html.twig" %}

  {% block document_title %}{% trans %}Latest pastes{% endtrans %}{% endblock %}

  {% block breadcrumb %}
    {{ breadcrumb.add(block('document_title'), build_url('latest')) }}
  {% endblock %}

  {% block document_content %}
    {% if container|length > 0 %}
      <h4 style="margin-top: 0" class="muted_font"><span class="glyphicon glyphicon-fire"></span> {% trans %}Latest pastes{% endtrans %}</h4>

      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>{% trans %}Paste unique identifier{% endtrans %}</th>
              <th>{% trans %}Title{% endtrans %}</th>
              <th>{% trans %}Author{% endtrans %}</th>
              <th>{% trans %}Submitted{% endtrans %}</th>
              <th>{% trans %}Syntax highlighting{% endtrans %}</th>
            </tr>
          </thead>
          <tbody>
            {% for key in container %}
              <tr>
                <td><a href="{{ build_url('paste/' ~ key.unique_id) }}"><span class="glyphicon glyphicon-link"></span> {{ key.unique_id }}</a></td>
                <td>{{ key.title is not empty ? key.title : '-' }}</td>
                <td>{{ key.author is not empty ? key.author : '-' }}</td>
                <td><span class="parse_date tooltip-top" title="{{ key.time|date("Y-m-d H:i:s") }}">{{ key.time|date("Y-m-d H:i:s") }}</span></td>
                <td>{{ key.syntax }}</span></td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
        </div>
      {% else %}
        <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title">
              <i class="fa fa-exclamation-circle fa-lg"></i> <b>{% trans %}No results{% endtrans %}</b>
            </h3>
          </div>
          <div class="panel-body">
            {% trans %}No results found. Send a public paste and try again.{% endtrans %}
          </div>
        </div>

        <a href="{{ build_url() }}" class="btn btn-primary"><i class="fa fa-home"></i> {% trans %}Return to index page{% endtrans %}</a>
      {% endif %}
  {% endblock %}