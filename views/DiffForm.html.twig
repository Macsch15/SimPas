{% extends "BaseBlock.html.twig" %}

  {% block document_title %}{% trans %}Compare&nbsp;{{ left_id }}{% endtrans %}{% endblock %}

  {% block breadcrumb %}
    {{ breadcrumb.add(block('document_title'), build_url('compare/' ~ left_id)) }}
  {% endblock %}

  {% block document_content %}
    <form class="form-inline" method="post" action="{{ build_url('compare/' ~ left_id) }}">
      <div class="small_form">
        {% set left_link = '<a class="muted_font" href="' ~ build_url('paste/' ~ left_id) ~ '">' ~ left_id ~ '</a>' %}
        
        <h4 style="margin-top: 0" class="muted_font pull-left"><i class="fas fa-cubes"></i>&nbsp;{% trans %}Compare&nbsp;{{ left_link }}{% endtrans %}</h4>
        
        <div class="diff_text_help">
          {% trans %}Enter in the field below paste id or full url to compare.{% endtrans %}
        </div>

        <div class="form-group">
          <label for="diff_right"><span class="badge">{{ left_id }}</span>&nbsp;{% trans %}with{% endtrans %}</label>

          <input type="text" name="post_compare_right" class="form-control diff_input_width" id="diff_right" placeholder="{% trans %}Enter paste id or URL...{% endtrans %}">
        </div>

        <button type="submit" class="btn main_button submit_button">
          {% trans %}Compare{% endtrans %}
        </button>
      </div>
    </form>
  {% endblock %}